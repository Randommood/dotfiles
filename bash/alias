# git svn
alias gsf='git svn fetch'
alias gsr='git svn rebase'
alias gsp='git svn fetch; git stash save &> /dev/null; git svn rebase && git stash pop'
alias gsd='git stash save && git svn dcommit'

alias enw='emacs -nw'
alias gi='gem install'
