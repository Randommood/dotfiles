[alias]
  st = status
  ci = commit
  co = checkout
  br = branch
  ls = branch
  s  = status
  a = add
  b  = branch
  d = diff
  dc = diff --cached
  v = show
  l = log --decorate --oneline --graph
  ll = log
  cp = cherry-pick
  c  = checkout
  cc = commit
  ri = rebase -i HEAD~10
  sh = !git-sh
  ro = !git fetch origin && git reset --hard origin/master
  ro2 = !git fetch origin && git reset --hard origin/`git symbolic-ref HEAD | cut -d"/" -f3`
	ct = checkout -t
	mf = merge --ff-only
[core]
  editor = /usr/bin/vim
  excludesfile = ~/.gitignore
  whitespace = trailing-space,space-before-tab
[apply]
  whitespace = fix
[push]
  default = current
[branch]
