[user]
  name = Jason Hansen
  email = jhansen@xmission.com
[color]
  diff = auto
  status = auto
  branch = auto
[color "branch"]
  current = yellow reverse
  local = yellow
  remote = green
[color "diff"]
  meta = yellow bold
  frag = magenta bold
  old = red bold
  new = green bold
[alias]
  st = status
  ci = commit
  co = checkout
  br = branch
  ls = branch
  s  = status
  a = add
  b  = branch
  d = diff
  dc = diff --cached
  v = show
  l = log --decorate --oneline --graph
  ll = log
  cp = cherry-pick
  c  = checkout
  cc = commit
  ri = rebase -i HEAD~10
  sh = !git-sh
  ro = !git fetch origin && git reset --hard origin/master
  ro2 = !git fetch origin && git reset --hard origin/`git symbolic-ref HEAD | cut -d"/" -f3`
[core]
  excludesfile = ~/.gitignore
  whitespace = trailing-space,space-before-tab
[apply]
  whitespace = fix
